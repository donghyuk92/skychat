        <activity
            android:name="itm.capstone.skychat.NameActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        -->
        <activity
            android:name="itm.capstone.skychat.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="itm.capstone.skychat.SignupActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>